  body
    amp-analytics(type="googleanalytics")
      script(type="application/json").
        {
          "vars": {
            "account": "UA-162360669-1"
          },
          "triggers": {
            "trackPageview": {
              "on": "visible",
              "request": "pageview"
            }
          }
        }

    .top-anchor.pos-relative(id="top-anchor")
      amp-position-observer(on="enter:hideAnim.start; exit:showAnim.start" layout="nodisplay")

    block content



    +b.AMP-SIDEBAR.sidebar-mobile.pos-relative(id="mainNavSidebar" layout="nodisplay" side="right")
      +e.BUTTON.close-btn.clear-btn(type="button" on="tap:mainNavSidebar.close" tabindex="0") âœ•
      +b.NAV.nav-mobile
        +e.UL.items.clear-list
          +e.LI.item
            +e.A.item-link(href="about.html") About Us
          +e.LI.item
            +e.A.item-link(href="blog.html") Blog
          +e.LI.item
            +e.A.item-link(href="contact.html") Contact Us

    amp-animation(id="showAnim" layout="nodisplay")
      script(type="application/json").
        {
          "duration": "200ms",
          "fill": "both",
          "iterations": "1",
          "direction": "alternate",
          "animations": [{
            "selector": "#header-scroll-effect",
            "keyframes": [{
              "opacity": "1",
              "visibility": "visible"
            }]
          }]
        }
    amp-animation(id="hideAnim" layout="nodisplay")
      script(type="application/json").
        {
        "duration": "200ms",
          "fill": "both",
          "iterations": "1",
          "direction": "alternate",
          "animations": [
            {
              "selector": "#header-scroll-effect",
              "keyframes": [
                { "opacity": "0", "visibility": "hidden" }
              ]
            }
          ]
        }


    block scripts 